<% include ../../_layout/backend/head %>
<% include ../../_layout/backend/menu %>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Menus</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <% include ../../_layout/messages %>
            <div class="panel panel-default">
                <div class="panel-heading">
                    DataTables Advanced Tables
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(menus){ %>
                                <% menus.forEach(function(menu , index){ %>
                                    <tr class="odd gradeX">
                                        <td><%=menu.title %></td>
                                        <td class="center"><%=menu.status %></td>
                                        <td class="center">
                                           
                                            <a href="/admin/menu/edit/<%=menu._id %>" class="btn btn-primary">
                                                Add/Edit Items
                                            </a>
                                            
                                            <a href="/admin/menu/delete/<%=menu._id %>" class="btn btn-danger">
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% }else{ %>
                            <tr class="even gradeC">
                                <td colspan="5">No menu Found!</td>
                                
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                    
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
<% include ../../_layout/backend/footer %>