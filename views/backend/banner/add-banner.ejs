
<% include ../../_layout/backend/head %>
<% include ../../_layout/backend/menu %>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Banner</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                   Add Banner
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <% include ../../_layout/messages %>
                            <form role="form" action="/admin/banner/add" 
                                method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label>Title</label>
                                    <input class="form-control" name="title" 
                                        id="title" placeholder="Enter Banner Title *">
                                </div>
                                <div class="form-group">
                                    <label>Slogan</label>
                                    <textarea class="form-control" name="description" 
                                        placeholder="Enter banner description" id="description" cols="30" rows="5"></textarea>
                                </div>
                                <div class="form-group">
                                    <label>Upload Image</label>
                                    <input type="file" name="image">
                                    <p class="help-block"> upload a banner image *.</p>
                                </div>
                                <div class="form-group">
                                    <label> Order</label>
                                    <input class="form-control" name="order" id="order" placeholder="Place order">
                                </div>
                                <button type="submit" class="btn btn-default">Publish</button>
                            </form>
                        </div>
                       
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
<% include ../../_layout/backend/footer %>