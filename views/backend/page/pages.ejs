<% include ../../_layout/backend/head %>
<% include ../../_layout/backend/menu %>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Pages</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <% include ../../_layout/messages %>
            <div class="panel panel-default">
                <div class="panel-heading">
                    DataTables Advanced Tables
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Slug</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(pages){ %>
                                <% pages.forEach(function(page , index){ %>
                                    <tr class="odd gradeX">
                                        <td><%=page.title %></td>
                                        <td><%=page.slug %></td>
                                        <td class="center"><%=page.status %></td>
                                        <td class="center">
                                            <a href="/<%=page.slug %>" class="btn btn-success">
                                                View
                                            </a>
                                            <a href="/admin/page/edit/<%=page._id %>" class="btn btn-primary">
                                                Edit
                                            </a>
                                            <a href="/admin/page/delete/<%=page._id %>" class="btn btn-danger">
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% }else{ %>
                            <tr class="even gradeC">
                                <td colspan="5">No page Found!</td>
                                
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                    
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
<% include ../../_layout/backend/footer %>